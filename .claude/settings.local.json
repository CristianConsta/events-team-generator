{
  "permissions": {
    "allow": [
      "Bash(git rm:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git add:*)",
      "Bash(gh actions list:*)",
      "Bash(git remote:*)",
      "Bash(env)",
      "Bash(xxd:*)",
      "Bash(du:*)",
      "Bash(dir:*)",
      "Bash(wc:*)",
      "Bash(npm test:*)",
      "Bash(npm install:*)",
      "Bash(npm audit:*)",
      "Bash(node -e:*)",
      "Bash(node:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git rebase:*)",
      "Bash(git stash:*)",
      "Bash(git checkout:*)",
      "Bash(git stash:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/eslint-fix.js"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/guard-firebase-config.js"
          }
        ]
      }
    ]
  }
}
