{
  "name": "desert-storm-generator",
  "private": true,
  "description": "One-time tooling for Firebase data migration",
  "scripts": {
    "lint": "eslint app.js firebase-module.js js/**/*.js tests/**/*.js e2e/**/*.js",
    "lint:ci": "npm run lint",
    "check:budgets": "node scripts/check-size-budgets.js",
    "test": "npm run test:unit",
    "test:ci": "npm run lint:ci && npm run check:budgets && npm run test:unit && npm run test:e2e:smoke",
    "test:unit": "node --test tests/*.test.js",
    "test:rules": "firebase emulators:exec --only firestore \"node --test tests/firestore.rules.emulator.js\"",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json",
    "test:e2e": "playwright test --project=edge-desktop --project=edge-mobile",
    "test:e2e:edge": "playwright test --project=edge-desktop",
    "test:e2e:mobile": "playwright test --project=edge-mobile",
    "test:e2e:headed": "playwright test --project=edge-desktop --headed",
    "test:e2e:smoke": "playwright test --project=edge-desktop --project=edge-mobile --grep @smoke",
    "test:e2e:regression": "playwright test --project=edge-desktop --project=edge-mobile --grep @regression",
    "test:e2e:real": "playwright test --project=edge-desktop --grep @real"
  },
  "dependencies": {
    "@google-cloud/firestore": "^8.2.0",
    "firebase-admin": "^12.7.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^4.0.1",
    "@playwright/test": "^1.58.2",
    "eslint": "^8.57.1",
    "firebase-tools": "^14.21.0",
    "typescript": "^5.4.0"
  }
}
